#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

export DOTS=$HOME/.dotfiles

# Set OS X defaults
#$ZSH/osx/set-defaults.sh

# Install homebrew
#$ZSH/homebrew/install.sh 2>&1

# Upgrade homebrew
echo "› brew update"
brew update

#Try to upgrade important packages
echo "› upgrading some bew packages"
brew upgrade zsh
brew upgrade bash
brew upgrade vim
brew upgrade python
brew upgrade git
brew upgrade docker
brew upgrade docker-compose
brew upgrade docker-machine

# Install software
echo "› $DOTS/script/install"
$DOTS/script/install