#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

# Set OS X defaults
#$ZSH/osx/set-defaults.sh

# Install homebrew
#$ZSH/homebrew/install.sh 2>&1

# Upgrade homebrew
echo "› brew update"
brew update

#Try to upgrade important packages
echo "› upgrading some brew packages"
brew upgrade autojump
brew upgrade git
brew upgrade pandoc
brew upgrade zsh
brew upgrade bash
brew upgrade vim

# this one takes a lot of time...
# brew upgrade r

# Install software
echo "› $DOTS/script/install"
$DOTS/script/install