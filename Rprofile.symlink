# Change colors when running R in the terminal
if (Sys.getenv("TERM") == "xterm-256color") library("colorout")

# Set default mirror
local({
    r <- getOption("repos")
    r["CRAN"] <- "http://cran.revolutionanalytics.com"
    options(repos=r)
})

# Prevent save workspace from appearing
# http://stackoverflow.com/questions/4996090/how-to-disable-save-workspace-image-prompt-in-r
formals(quit)$save <- "no"
